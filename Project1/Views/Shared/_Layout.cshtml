<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: navajowhite">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("COOKTHIS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" });
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Recipes", "Index", "Recipes")</li>
                    <li>@Html.ActionLink("Random recipe", "RandomRecipe", "Recipes")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cookthis - made by Hristijan Mitic.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


    <style>
        .navbar-inverse .navbar-nav > li > a{
            color:sienna;
        }
        .navbar > .container .navbar-brand, .navbar > .container-fluid .navbar-brand {
            color: sienna;   
        }
        p{
            color:sienna
        }
        .navbar-inverse{
            border-color:sienna;
        }
        hr {
            border-top: 1px solid sienna;
        }
        a:hover{
            text-decoration:none;
            color:aqua;
        }
        body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse > ul > li:nth-child(1) > a:hover, body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse > ul > li:nth-child(2) > a:hover, body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse > ul > li:nth-child(3) > a:hover, #logoutForm > ul > li:nth-child(1) > a:hover, #logoutForm > ul > li:nth-child(2) > a:hover{
            color: burlywood;
        }
        body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-header > a, body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse > ul > li:nth-child(1) > a, body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse > ul > li:nth-child(2) > a, body > div.navbar.navbar-inverse.navbar-fixed-top > div > div.navbar-collapse.collapse > ul > li:nth-child(3) > a, #logoutForm > ul > li:nth-child(1) > a, #logoutForm > ul > li:nth-child(2) > a {
            -webkit-text-stroke: medium;
        }
    </style>    

